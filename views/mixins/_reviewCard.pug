mixin reviewCard(review= {})
  .review
    .review__header
      .review__author
        img(class="avatar" src=`https://gravatar.com/avatar/${review.author.gravitar}?s=200`)
        p= review.author.name
      div(class="review__stars" title=`Rated ${review.rating} out of 5 stars`)
        = `★`.repeat(review.rating)
        = `☆`.repeat(5 - review.rating)
        //- h.moment comes from moment.js, which was imported in helpers.js
      time(class="review__time" datetime=review.created)= h.moment(review.created).fromNow()
    .review__body
      p= review.text
